<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4">
  <servlet>
    <servlet-name>indexServlet</servlet-name>
    <servlet-class>org.xblo.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>actionServlet</servlet-name>
  	<servlet-class>org.xblo.servlet.ActionServlet</servlet-class></servlet>

  <servlet-mapping>
    <servlet-name>indexServlet</servlet-name>
    <url-pattern>/IndexServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>actionServlet</servlet-name>
  	<url-pattern>/ActionServlet</url-pattern></servlet-mapping>
</web-app>

